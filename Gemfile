  gem 'guard-rspec'
  gem 'guard-spork'

  gem 'guard-rubocop'
  gem 'gem-release'

  gem 'rake'
  gem 'rspec'
  gem 'rspec-mocks'
  gem 'webmock'
  gem 'rubocop'
end

